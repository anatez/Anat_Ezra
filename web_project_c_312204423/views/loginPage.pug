doctype html
html
    head
        script(src='JS.js' defer='')
        link(rel="stylesheet", href="style.css")
        title
    body
        #login_page
            .grid_container
                .nav
                    nav
                        ul.nav-list
                            li.list-item(style='display:inline;')
                                a(href='/loginPage') Home
                            li.list-item(style='display:inline;')
                                a(href='/SignUp') SignUp
                .HEADER
                    h1#main_header  BabySetting 
                .MAIN
                    img.logo(src='logo.png' alt='')
                    form.signIn_form(action="/auth" method="post" onsubmit='return verifyFields()')
                        label(for='name') User name
                        br
                        input#FullName(type='text' name='name')
                        br
                        label(for='email') Email
                        br
                        input#email(type='email' name='email' pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$')
                        br
                        label(for='password') password
                        br
                        input#pswd(type='password' name='password' value='')
                        br
                        button.form_button(type='submit') Login
                        br
                        span#message 